<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Restablecer Contraseña</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .container {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      max-width: 400px;
      width: 100%;
    }
    h2 {
      color: #333333;
      text-align: center;
    }
    label {
      display: block;
      margin-bottom: 10px;
      color: #555555;
    }
    input {
      width: 100%;
      padding: 10px;
      margin-bottom: 20px;
      border: 1px solid #e0e0e0;
      border-radius: 5px;
    }
    button {
      width: 100%;
      padding: 10px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background-color: #45a049;
    }
    .message {
      color: #555555;
      text-align: center;
      margin-top: 20px;
    }
    .countdown {
      text-align: center;
      margin-top: 20px;
      font-size: 16px;
      color: #333333;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Restablecer Contraseña</h2>
    <form id="resetPasswordForm">
      <input type="hidden" name="code" value="{{code}}">
      <label for="password">Nueva Contraseña</label>
      <input type="password" id="password" name="password" required>
      <label for="confirmPassword">Confirmar Contraseña</label>
      <input type="password" id="confirmPassword" name="confirmPassword" required>
      <button type="submit">Restablecer Contraseña</button>
    </form>
    <div class="message" id="message"></div>
    <div class="countdown" id="countdown"></div>
  </div>

  <script>
    document.getElementById('resetPasswordForm').addEventListener('submit', async function(event) {
      event.preventDefault();

      const code = document.querySelector('input[name="code"]').value;
      const password = document.querySelector('input[name="password"]').value;
      const confirmPassword = document.querySelector('input[name="confirmPassword"]').value;

      if (password !== confirmPassword) {
        document.getElementById('message').innerText = 'Las contraseñas no coinciden';
        return;
      }

      try {
        const response = await fetch('/api/sessions/newpassword', {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ code, password })
        });

        const result = await response.json();
        const messageElement = document.getElementById('message');
        messageElement.innerText = result.message;

        if (response.ok) {
          messageElement.style.color = 'green';

          // Inicia el contador de 20 segundos
          let countdown = 20;
          const countdownElement = document.getElementById('countdown');
          countdownElement.innerText = `Redirigiendo en ${countdown} segundos...`;
          
          const interval = setInterval(() => {
            countdown--;
            countdownElement.innerText = `Redirigiendo en ${countdown} segundos...`;
            if (countdown <= 0) {
              clearInterval(interval);
              window.location.href = '/login'; // Redirige al login
            }
          }, 1000);
        } else {
          messageElement.style.color = 'red';
        }
      } catch (error) {
        document.getElementById('message').innerText = 'Error al restablecer la contraseña';
        document.getElementById('message').style.color = 'red';
      }
    });
  </script>
</body>
</html>
